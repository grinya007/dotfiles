term alacritty
truecolor on
attrcolor b ".I"
defscrollback 10000
maptimeout 5
defbce on
vbell off
hardstatus off
backtick 0 1 1 "/bin/date" '+%H:%M:%S'
backtick 1 1 1 "/usr/bin/sh" -c 'cat /proc/loadavg | sed -E "s/([0-9.]+) ([0-9.]+) ([0-9.]+) .+/\1 \2 \3/"'
hardstatus alwayslastline '%{#cccccc;#222222} %H %0` %=%-Lw%{+b #222222;#cccccc}%n%f %t%{-}%+Lw %= %1` '
